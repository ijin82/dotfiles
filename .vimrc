

" highlight on
syntax on


set wildmode=list:longest,full

" backup and swap
set noswapfile
set nobackup
set nowritebackup

" line nubers + rulers
set number
set ruler

" textwrap
set nowrap

" disable beeping
set noeb vb t_vb=

" tabs to spaces
set tabstop=2
set shiftwidth=2
set expandtab



" tabs navigation
map <C-t> :tabnew<CR>
map <C-n> :tabn<CR>
map <C-p> :tabp<CR>
map <C-w> :tabc<CR>




